<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:DesdeElBanquilloMaui.ViewModels"
    x:Class="DesdeElBanquilloMaui.Views.Administrators.AdministratorDetailPage"
    Title="Detalle Administrador">

    <ContentPage.BindingContext>
        <viewmodels:AdministratorDetailViewModel />
    </ContentPage.BindingContext>

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">

            <Label Text="Nombre" />
            <Entry Text="{Binding Administrator.Name}" Placeholder="Nombre" />

            <Label Text="Email" />
            <Entry Text="{Binding Administrator.Email}" Keyboard="Email" Placeholder="Email" />

            <Label Text="Password" />
            <Entry Text="{Binding Administrator.Password}" IsPassword="True" Placeholder="Password" />

            <Label Text="Activo" />
            <Switch IsToggled="{Binding Administrator.IsActive}" />

            <Button Text="Guardar" Command="{Binding SaveCommand}" />
            <Button Text="Eliminar" BackgroundColor="Red" TextColor="White" Command="{Binding DeleteCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
